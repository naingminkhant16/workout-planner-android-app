<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_neutral_variant10">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/MyToolbarStyle"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/app_name"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWorkoutsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="9"
                    android:text="@string/workouts"
                    android:textColor="@color/md_theme_onBackground"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCreateCustomWorkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/md_theme_primaryContainer"
                    android:gravity="center"
                    android:text="@string/create_custom"
                    android:textColor="@color/md_theme_primary" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvWorkoutSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/add_your_favourite_workouts_to_weekly_plan"
                android:textColor="@color/md_theme_onBackground"
                android:textSize="14sp"
                android:textStyle="italic" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!--            TEMPLATE WORKOUT LIST-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTemplateWorkouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                tools:listitem="@layout/template_workout_rv_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="@android:color/darker_gray" />


            <TextView
                android:id="@+id/tvWeeklyPlansTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_weekly_workout_plans"
                android:textColor="@color/md_theme_onBackground"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWeeklyPlansSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/your_planned_workouts_for_this_week"
                android:textColor="@color/md_theme_onBackground"
                android:textSize="14sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/dash" />

                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!--            Weekly Workouts List-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvWeeklyWorkouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/weekly_workout_rv_item" />

            <TextView
                android:id="@+id/tvNoWorkouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_theme_secondaryContainer"
                android:padding="12dp"
                android:text="@string/no_workout_fot_this_week_yet"
                android:textAlignment="center"
                android:visibility="gone" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
