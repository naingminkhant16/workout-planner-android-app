<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWeekRange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="19 Mon â€“ 25 Sun"
                android:textColor="@color/md_theme_primary"
                android:textSize="13sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvWorkoutStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_status_completed"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Completed"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />


        <TextView
            android:id="@+id/tvWorkoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push Day"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvWorkoutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Chest, shoulders and triceps focused workout"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textSize="14sp"
            android:textStyle="italic" />


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />


        <TextView
            android:id="@+id/tvDayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planned on: Monday"
            android:textColor="@color/md_theme_secondary"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
